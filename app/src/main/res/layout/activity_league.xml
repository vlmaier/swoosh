<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LeagueActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"/>
    <ImageView
            android:src="@drawable/swooshlogo"
            android:layout_width="120dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView2" android:scaleType="fitCenter" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Desired League:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView5" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginTop="48dp" android:fontFamily="@font/montserrat" android:textSize="18sp"
            android:textColor="@android:color/white"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="64dp">
        <ToggleButton
                android:text="Mens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toggleButton"
                android:fontFamily="@font/montserrat" android:textColor="@android:color/white" android:textSize="18sp"
                android:textStyle="bold" android:background="@drawable/swoosh_toggle" android:textOff="Mens"
                android:textOn="Mens" tools:text="Mens" android:capitalize="none" android:textAllCaps="false"/>
        <ToggleButton
                android:text="Womens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toggleButton2" android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" android:background="@drawable/swoosh_toggle"
                android:textColor="@android:color/white" android:textSize="18sp" android:fontFamily="@font/montserrat"
                android:textOff="Womens" android:textOn="Womens" tools:text="Womens"
                android:capitalize="none" android:textAllCaps="false" android:textStyle="bold"/>
        <ToggleButton
                android:text="Co-ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toggleButton3"
                android:background="@drawable/swoosh_toggle" android:textColor="@android:color/white"
                android:textSize="18sp" android:fontFamily="@font/montserrat" android:textOff="Co-ed"
                android:textOn="Co-ed" tools:text="Co-ed" android:textAllCaps="false" android:capitalize="none"
                android:textStyle="bold"/>
    </LinearLayout>
    <Button
            android:text="NEXT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            android:fontFamily="@font/montserrat" android:textSize="16sp" android:textColor="@android:color/white"
            android:background="@drawable/swoosh_button" android:textStyle="bold" android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>